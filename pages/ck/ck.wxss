/* pages/ck/ck.wxss */
.wrapper{
  background: #eee;
}
.tit{
  height:130rpx;
  background: #fff;
  position: relative;
  top:20rpx;
  line-height: 130rpx;
  padding:0 30rpx;
}
.tit text:nth-child(1){
  font-size: 50rpx;
  font-weight: bold;
  margin-right: 30rpx;
}
.footer{
  width:100%;
  height:150rpx;
  background: rgba(0, 0, 0, .8);
  position: fixed;
  left:0;
  bottom:0;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.footer button{
  width:90%;
  background: #FF6634;
  border-radius: 60rpx;
  color:#fff;
}